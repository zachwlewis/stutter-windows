<Window
        Name="AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Stutter" x:Class="Stutter.Windows.About"
        Title="About Stutter" Height="300" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen" Background="#FFC9C9C9" SnapsToDevicePixels="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="ApplicationLabel" Margin="0" TextWrapping="Wrap" FontFamily="Segoe WP Light" FontSize="32" Padding="5,5,5,9" VerticalAlignment="Top" Text="Stutter 12.11.09">
            <TextBlock.Background>
                <SolidColorBrush Color="White"/>
            </TextBlock.Background></TextBlock>
        <Button x:Name="OKButton" Content="OK" Margin="0,10,10,10" Grid.Row="2" Padding="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="64" Click="OKButton_Click"/>
        <Label x:Name="CopyrightLabel" HorizontalAlignment="Left" Margin="10,10,0,10" Grid.Row="2" VerticalAlignment="Bottom" Width="205" Content="Copyrighted by me!"/>
        <TextBlock Margin="0" Grid.Row="1" TextWrapping="Wrap" Text="Dedicated to Corrine." Padding="5"/>

    </Grid>
</Window>
